<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C303B"
    android:padding="20dp"
    tools:context=".Aiuto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/root"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

    <LinearLayout
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_before" />

        <TextView
            android:id="@+id/aiuto"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Aiuto"
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="188dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <CheckBox
            android:id="@+id/cont_mancanti"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:buttonTint="@color/ambient_mode_text"
            android:checked="false"
            android:layout_marginTop="15dp"
            android:text="   Contenitori mancanti"
            android:fontFamily="@font/roboto_medium"
            android:scaleX="0.70"
            android:visibility="visible"
            android:layout_marginLeft="-20dp"
            android:scaleY="0.70"
            android:textSize="13dp" />
        <CheckBox
            android:id="@+id/pn_mancanti"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:buttonTint="@color/ambient_mode_text"
            android:checked="false"
            android:visibility="visible"
            android:fontFamily="@font/roboto_medium"
            android:text="   PN mancanti"
            android:scaleX="0.70"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="-20dp"
            android:scaleY="0.70"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/reg_incorso"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Registrazione in corso..."
            android:textColor="#BAC7E8"
            android:textSize="13dp"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/audio_reg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginLeft="18dp"
            android:text="Audio registrato"
            android:textColor="#BAC7E8"
            android:textSize="13dp"
            android:visibility="invisible" />




    </FrameLayout>

    <FrameLayout
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/record"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/ic_mic"
            android:visibility="visible"
            android:background="@drawable/button_blue_round"/>

        <ImageView
            android:id="@+id/stop"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/button_blue_round"
            android:src="@drawable/ic_stop"
            android:visibility="invisible" />

        <Button
            android:id="@+id/cancella"
            android:layout_width="69dp"
            android:layout_height="26dp"
            android:background="@drawable/button_blue"
            android:fontFamily="@font/roboto_medium"
            android:text="Cancella"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/invia"
            android:layout_width="69dp"
            android:layout_height="26dp"
            android:background="@drawable/button_blue"
            android:text="Invia"
            android:layout_gravity="center"
            android:layout_marginLeft="38dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:textStyle="bold"/>

    </FrameLayout>
    <!--<Button
        android:id="@+id/invia"
        android:layout_marginTop="15dp"
        android:layout_width="69dp"
        android:layout_height="26dp"
        android:background="@drawable/button_blue"
        android:text="Invia"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto_medium"
        android:textAllCaps="false"
        android:textSize="14dp"
        android:textStyle="bold"/>-->


</LinearLayout>

