<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C303B"
    tools:context=".RequestDetails"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">

        <ImageView
            android:id="@+id/chiudi"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_before" />

        <TextView
            android:id="@+id/procedimento"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Procedimento"
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="188dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="1"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/step"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:text="Cambia orientamento pinza."/>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="8dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/indietro"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_before"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:background="@drawable/rectangle_btn_grey"/>
        <ImageView
            android:id="@+id/avanti"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/next"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:visibility="visible"
            android:background="@drawable/rectangle_btn_grey"/>

        <Button
            android:id="@+id/invia"
            android:layout_width="69dp"
            android:layout_height="26dp"
            android:text="Invia"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="55dp"
            android:visibility="invisible"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14dp"
            android:textStyle="bold"
            android:background="@drawable/button_blue"/>


    </FrameLayout>




</LinearLayout>
