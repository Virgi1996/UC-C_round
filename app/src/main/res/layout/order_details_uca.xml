<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey1"
    tools:context=".OrderDetails_UCA"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
    <DigitalClock
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="9dp"
        android:layout_marginLeft="110dp"
        />

    <TextView
        android:id="@+id/kit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:text="KIT 42100"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In corso"
        android:textColor="@color/white"
        android:textSize="9dp"
        android:layout_marginRight="55dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        >
        <ProgressBar
            android:id="@+id/pb"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="110dp"
            android:layout_height="13dp"
            android:max="35"
            android:progress="1" />
        <ProgressBar
            android:id="@+id/pb_trasbordo"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="40dp"
            android:layout_height="13dp"
            android:layout_marginHorizontal="5dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/attivita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATTIVITÃ€ IN CORSO: "
        android:visibility="visible"
        android:textColor="@color/white"
        android:textSize="9dp"/>

    <Button
        android:id="@+id/trasbordo"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:background="@drawable/rectangle_btn_grey"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="13dp"
        android:text="CONFERMA FINE TRASBORDO"
        android:visibility="invisible"        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/kit"
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/rectangle_btn_grey"
            android:text="Kit turno"/>
        <Button
            android:id="@+id/notifiche"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/rectangle_btn_grey"

            android:text="Richieste"/>

    </LinearLayout>



</LinearLayout>