<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C303B"
    tools:context=".RequestDetails"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
    <LinearLayout
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">

        <ImageView
            android:id="@+id/chiudi"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_before" />

        <TextView
            android:id="@+id/procedimento"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Procedimento"
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="188dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/solve_action_descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Togliere ostacolo"
        android:textColor="#8C1616"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/severity_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urgenza: alta"
        android:textColor="#8C1616"
        android:textSize="10dp"
        android:layout_marginRight="48dp"/>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/cobot_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGV 1 "
            android:textStyle="bold"
            android:textSize="8dp"/>

        <TextView
            android:id="@+id/kit_name"
            android:layout_width="86dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="40dp"
            android:text="NOME KIT:"
            android:textSize="8dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:src="@android:drawable/divider_horizontal_dark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_before" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/next" />
    </LinearLayout>

    <TextView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:text="Testo con indicazioni che guidano l'utente nella risoluzione del problema segnalato "/>
    <Button
        android:id="@+id/ok"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="FINE"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:textSize="12dp"
        android:background="@drawable/rectangle_btn_grey"/>



</LinearLayout>
