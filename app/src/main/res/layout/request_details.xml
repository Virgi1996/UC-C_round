<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C303B"
    tools:context=".RequestDetails"
    android:orientation="vertical"
    android:padding="15dp"
    android:paddingTop="8dp"
    android:paddingBottom="6dp"
    android:paddingLeft="15dp"
    android:paddingRight="12dp"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

    <TextView
        android:id="@+id/solve_action_descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sblocco AGV"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/severity_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="URGENZA: ALTA"
        android:layout_marginLeft="40dp"
        android:textColor="#EB644B"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/cobot_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGV 1 "
            android:textColor="#D9D9D9"
            android:fontFamily="@font/roboto_medium"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/kit_name"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginHorizontal="65dp"
            android:textColor="#D9D9D9"
            android:text="KIT 42100"
            android:textSize="10dp" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/messaggio"
        android:layout_width="146dp"
        android:layout_height="43dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Messaggio: Attenzione materiale sparso a terra"
        android:textSize="13dp"
        android:layout_marginLeft="15dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/procedimento"
        android:layout_width="147dp"
        android:layout_height="27dp"
        android:background="@drawable/button_blue"
        android:text="Vedi procedimento"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto_medium"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textStyle="bold"/>



    <LinearLayout
        android:layout_width="157dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/aiuto"
            android:layout_width="49dp"
            android:layout_height="26dp"
            android:background="@drawable/button_blue"
            android:text="Aiuto"
            android:layout_marginLeft="35dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/fine"
            android:layout_width="49dp"
            android:layout_height="26dp"
            android:background="@drawable/button_blue"
            android:text="Fine"
            android:layout_marginHorizontal="10dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cerchio_bianco"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cerchio_grigio"/>

    </LinearLayout>-->

</LinearLayout>
